@model BugTracker.Model.Login.UserLogin
@{
    ViewData["Title"] = "WERE HERE";
}
<div class="mb-5 titilliumFontBold">
    <h1>
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-bug-fill align-bottom" viewBox="0 0 16 16">
            <path d="M4.978.855a.5.5 0 1 0-.956.29l.41 1.352A4.985 4.985 0 0 0 3 6h10a4.985 4.985 0 0 0-1.432-3.503l.41-1.352a.5.5 0 1 0-.956-.29l-.291.956A4.978 4.978 0 0 0 8 1a4.979 4.979 0 0 0-2.731.811l-.29-.956z" />
            <path d="M13 6v1H8.5v8.975A5 5 0 0 0 13 11h.5a.5.5 0 0 1 .5.5v.5a.5.5 0 1 0 1 0v-.5a1.5 1.5 0 0 0-1.5-1.5H13V9h1.5a.5.5 0 0 0 0-1H13V7h.5A1.5 1.5 0 0 0 15 5.5V5a.5.5 0 0 0-1 0v.5a.5.5 0 0 1-.5.5H13zm-5.5 9.975V7H3V6h-.5a.5.5 0 0 1-.5-.5V5a.5.5 0 0 0-1 0v.5A1.5 1.5 0 0 0 2.5 7H3v1H1.5a.5.5 0 0 0 0 1H3v1h-.5A1.5 1.5 0 0 0 1 11.5v.5a.5.5 0 1 0 1 0v-.5a.5.5 0 0 1 .5-.5H3a5 5 0 0 0 4.5 4.975z" />
		</svg>_tracker.
    </h1>
</div>
@if (!string.IsNullOrEmpty(Html.ValidationSummary(true).ToString()))
{
    <div class="alert alert-danger pb-0">
        @Html.ValidationSummary(true)
    </div>
}
<form asp-controller="Login" asp-action="Index" method="post">
    <div class=" mt-4 col-sm-10 mx-auto mb-1">
        
        <input asp-for="UserName" type="text" class="pt-3 pb-3 form-control  rounded-3" id="login_username" placeholder="Enter your username" />
    </div>
    <div class=" mb-1 col-sm-10 mx-auto">
        
        <input asp-for="Password" type="password" class="pt-3 pb-3 form-control rounded-3" id="login_password" placeholder="Enter your password" />

    </div>
    <div class="col-sm-3 mx-auto">
		<button type="submit" class=" btn btn-primary mt-2 mb-5 rounded-5 w-100 pt-3 pb-3 ">SIGN IN </button>
	</div>
    <div>
		<p>Want to join? <a class="removeUnderline" asp-controller="Login" asp-action="Create" method="get">Sign Up</a></p>
    </div>
    <div>
        <p>Or test it out? <a class="removeUnderline" asp-controller="Login" asp-action="Test" method="get">Demo User</a></p>
    </div>
    

</form>
