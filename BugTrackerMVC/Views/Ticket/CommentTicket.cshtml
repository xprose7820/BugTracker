@model BugTracker.Model.TicketComment.TicketCommentCreate
@{
	ViewData["Title"] = "Create a Comment";
}

<form asp-controller="Ticket" asp-action="CommentTicket" method="post" id="customForm_TableEdit" class="row g-4 ms-5 mt-5 ps-3 pe-3 pb-4" style="background-color: white; width: 95vh;">
	@Html.Hidden("TicketId", (int)ViewBag.TicketId)

	<div id="manageUserRolesCard_customEdit" class="card" style="width: 95%; left: 0; right: 0; margin: auto; top: -.8rem;">
		<div class="card-body">
			<div class="mb-0" style="font-weight: bolder;">
				<h2 class="card-title">Commenting Ticket # @ViewBag.TicketId</h2>
			</div>
			<p class="mb-0">
				@Html.ActionLink("Back to List", "MyTickets", "Ticket", null, new { @class = "text-white" })
			</p>
		</div>
	</div>


	<div class="col-md-12">
		<label for="Message" class="form-label">Message</label>
		@Html.EditorFor(r => r.Message, new { htmlAttributes = new { @class = "form-control" } })

	</div>

	<div class="col-md-12 d-flex justify-content-end">
		<button type="submit" class="btn btn-primary">Add Comment</button>
	</div>
</form>

