@model BugTracker.Model.Ticket.TicketEdit
@{
	ViewData["Title"] = "Edit Ticket";
}
<form asp-controller="Ticket" asp-action="EditTicket" method="post" id="customForm_TableEdit" class="row g-4 ms-5 mt-5 ps-3 pe-3 pb-4" style="background-color: white; width: 95vh;">
	@Html.HiddenFor(model=>model.Id)
	<div id="manageUserRolesCard_customEdit" class="card " style=" width: 95%; left: 0; right: 0; margin: auto; top: -.8rem;">
		<div class="card-body">
			<div class="mb-0" style="font-weight: bolder;">
				<h2 class="card-title">Editing Ticket: @Model.Title </h2>
			</div>
			<p class="mb-0">
				@Html.ActionLink("Back to List", "MyTickets", "Ticket", null, new { @class = "text-white" })
			</p>
		</div>
	</div>
	<div class="col-md-6">
		<label for="Title" class="form-label">Title</label>
		@Html.EditorFor(r => r.Title, new { htmlAttributes = new { @class = "form-control" } })

	</div>
	<div class="col-md-6">

		<label for="Description" class="form-label">Description</label>
		@Html.EditorFor(r => r.Description, new { htmlAttributes = new { @class = "form-control" } })

	</div>
	<div class="col-md-6">
		<label for="DeveloperName" class="form-label">Developer</label>
		@Html.DropDownListFor(model => model.DeveloperName,
		(IEnumerable<SelectListItem>)ViewBag.Dropdown_Developers,
		"Select Developer",
		new { @class = "form-control" })
	</div>
	<div class="col-md-6">
		<label for="Priority" class="form-label">Priority</label>
		@Html.DropDownListFor(model => model.Priority,
		(IEnumerable<SelectListItem>)ViewBag.Dropdown_Priority,
		"Select Priority",
		new { @class = "form-control" })
	</div>
	<div class="col-md-6">
		<label for="Status" class="form-label">Status</label>
		@Html.DropDownListFor(model => model.Status,
		(IEnumerable<SelectListItem>)ViewBag.Dropdown_Status,
		"Select Status",
		new { @class = "form-control" })
	</div>
	<div class="col-md-6">
		<label for="Type" class="form-label">Type</label>
		@Html.DropDownListFor(model => model.Type,
		(IEnumerable<SelectListItem>)ViewBag.Dropdown_Type,
		"Select Type",
		new { @class = "form-control" })
	</div>
	<div class="col-md-12 d-flex justify-content-end">
		<button type="submit" class="btn btn-primary">Update Ticket</button>
	</div>
</form>